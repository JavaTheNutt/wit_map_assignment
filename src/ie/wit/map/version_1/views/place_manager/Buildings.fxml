<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
           minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
           prefWidth="600.0" stylesheets="@../../../common/styles/Application_Style.css"
           xmlns="http://javafx.com/javafx/8"
           fx:controller="ie.wit.map.version_1.views.place_manager.AddBuildingControl">
    <children>
        <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT"
                 prefHeight="400.0" prefWidth="600.0" side="RIGHT" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab closable="false" text="Add Building">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <GridPane>
                                    <children>
                                        <StackPane prefHeight="150.0" prefWidth="200.0">
                                            <children>
                                                <Label styleClass="formLabel" text="Name"/>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1">
                                            <children>
                                                <TextField fx:id="nameField" nodeOrientation="LEFT_TO_RIGHT"
                                                           promptText="Building Name"/>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="1">
                                            <children>
                                                <Label fx:id="nameErrorLabel" styleClass="invalidFormLabel"
                                                       text="This is the invalid label"/>
                                            </children>
                                        </StackPane>
                                    </children>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" top="30.0"/>
                                    </VBox.margin>
                                </GridPane>
                                <GridPane layoutX="30.0" layoutY="130.0">
                                    <children>
                                        <StackPane prefHeight="150.0" prefWidth="200.0">
                                            <children>
                                                <Label styleClass="formLabel" text="Type"/>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1">
                                            <children>
                                                <ChoiceBox fx:id="typeChoice" maxWidth="1.7976931348623157E308"
                                                           nodeOrientation="LEFT_TO_RIGHT" prefWidth="150.0"/>
                                            </children>
                                        </StackPane>
                                    </children>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <padding>
                                        <Insets left="20.0" right="20.0" top="30.0"/>
                                    </padding>
                                </GridPane>
                                <GridPane layoutX="30.0" layoutY="40.0">
                                    <children>
                                        <StackPane prefHeight="150.0" prefWidth="200.0">
                                            <children>
                                                <Label styleClass="formLabel" text="Function"/>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1">
                                            <children>
                                                <ChoiceBox fx:id="choiceBox" maxWidth="1.7976931348623157E308"
                                                           nodeOrientation="LEFT_TO_RIGHT" prefWidth="150.0"/>
                                            </children>
                                        </StackPane>
                                    </children>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" top="30.0"/>
                                    </VBox.margin>
                                </GridPane>
                                <GridPane layoutX="30.0" layoutY="40.0">
                                    <children>
                                        <StackPane prefHeight="150.0" prefWidth="200.0">
                                            <children>
                                                <Label styleClass="formLabel" text="Number of Rooms"/>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1">
                                            <children>
                                                <TextField fx:id="numRoomsField" nodeOrientation="LEFT_TO_RIGHT"
                                                           promptText="Number of Rooms"/>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="1">
                                            <children>
                                                <Label fx:id="numRoomsErrorLabel" styleClass="invalidFormLabel"
                                                       text="This is the invalid label"/>
                                            </children>
                                        </StackPane>
                                    </children>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" top="50.0"/>
                                    </VBox.margin>
                                </GridPane>
                                <GridPane layoutX="30.0" layoutY="40.0">
                                    <children>
                                        <StackPane prefHeight="150.0" prefWidth="200.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#selectArea"
                                                        text="Select Area"/>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#submitClicked"
                                                        text="Submit"/>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="1"/>
                                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
                                              GridPane.rowIndex="1">
                                            <children>
                                                <Label fx:id="areaNotSelectedLabel" styleClass="invalidFormLabel"
                                                       text="No area selected"/>
                                                <Label fx:id="areaSelectedLabel" styleClass="areaSelectedLabel"
                                                       text="Area selected" visible="false"/>
                                            </children>
                                        </VBox>
                                    </children>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" top="30.0"/>
                                    </VBox.margin>
                                </GridPane>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab closable="false" text="View Buildings">
                    <content>
                        <StackPane>
                            <children>
                                <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="buildingNameColumn" minWidth="-Infinity" prefWidth="1000.0"
                                                     text="Building Name"/>
                                        <TableColumn fx:id="buildingTypeColumn" prefWidth="75.0" text="Building Type"/>
                                        <TableColumn fx:id="numRoomsColumn" prefWidth="75.0" text="Number of Rooms"/>
                                    </columns>
                                </TableView>
                            </children>
                        </StackPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</StackPane>
