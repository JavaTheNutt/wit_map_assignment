<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="ie.wit.map.version_2.views.modal_root.ModalRootCtrl">
    <bottom>
        <StackPane prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <StackPane prefWidth="200.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#returnToFormClicked" text="Return to form"/>
                            </children>
                        </StackPane>
                        <HBox>
                            <children>
                                <Label text="The area you have selected is: "/>
                                <Label fx:id="idLabel" text="Label"/>
                            </children>
                        </HBox>
                        <StackPane>
                            <children>
                                <Label text="Areas highlighted in green may be selected, areas in red may not"/>
                            </children>
                        </StackPane>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>
